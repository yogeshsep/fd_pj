
<%= form_for @fd, :html => {:multipart => true} do |f| %>  
 
<% if @fd.errors.any? %>
<h4>Couldn't open FD Account</h4>
<ul>
<% @fd.errors.full_messages.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<% end %>
    
    <%= f.label :name %>
    <%= f.text_field :cusna %>

    <%= f.label :dob %>
    <%= f.date_select :dob, { :include_blank => true, :start_year => 1900, :end_year => 2014 } %>

    <%= f.label :sex %>
    <%= f.select :sex, options_for_select(%w[Male Female]), { :include_blank => true}  %>
       
    <%= f.label :addr %>
    <%= f.text_area :addr, :id => "address", :cols => 5, :rows => 3 %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :pin %>
    <%= f.text_field :pin %>

    <%= f.label :pan %>
    <%= f.text_field :pan %>

    <%= f.label :opened_on %>
    <%= f.text_field :openedon, :disabled => true, :value => Date.today %>

    <%= f.label :No_of_years %>
    <%= f.select :noy, options_for_select(%w[1year 2years 3years 4years 5years]), { :include_blank => true}  %>

    <%= f.label :Rate_of_interest %>
    <%= f.select :roi, options_for_select(%w[9.5% 10.0% 10.5% 11.0% 11.5%]), { :include_blank => true}  %>

    <%= f.label :deposit_amount %>
    <%= f.text_field :depamt, :placeholder =>'0.00' %>
  </div>

    <%= f.submit "Open FD", class: "btn btn-primary" %>     
    <% end %>
  </div>
</div>
